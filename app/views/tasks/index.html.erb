<%= render 'tasks/form' %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Remindable</th>
    </tr>
  </thead>
  <tbody>
    
    <% @tasks.each do |task| %>
      <tr>  
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.remindable %></td>
        <td><%= link_to 'Delete', task, method: :delete %></td>
        <td><%= link_to "Edit", edit_task_path(task) %></td>
        <td><%= link_to 'Show', task %></td>
        <td> 
          <%#= simple_form_for [task, @check_in] do |c| %>
            <%#= c.submit 'Check In' %>
          <%# end %>
          <%= link_to "Check In", controller: "tasks", action: "process_checkin", task_id: task.id, id:" ", :class => "fake" %>
        </td>

        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>