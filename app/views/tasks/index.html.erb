<div class="tasks">
    <a href="/tasks"><h3>Tasks</h3></a>
</div>


<%= render 'tasks/form' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Remindable</th>
    </tr>
  </thead>
  <tbody>
    
    <% @tasks.each do |task| %>
      <tr>  
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.remindable %></td>
        <td><%= link_to 'Delete', task, method: :delete %></td>
        <td><%= link_to 'Show', task %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>